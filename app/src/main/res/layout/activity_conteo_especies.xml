<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/pad_body"
    android:orientation="vertical"
    tools:context=".ConteoEspecies">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conteo_secc1_titulo"
        android:textSize="@dimen/sp_nivel_6"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="@dimen/mrg_2"
        android:background="@color/item_detect">
        <ImageView
            android:id="@+id/img_foto_procesada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mrg_4"
        android:text="@string/conteo_secc1_subtitulo_1"
        android:textSize="@dimen/sp_nivel_6"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mrg_2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_item_detecciones_canelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_item"
            android:background="@color/item_detect"
            android:text="Especie: Canelo Blanco\nCantidad: Esperando al servidor..."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mrg_2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_item_detecciones_desconocido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_item"
            android:background="@color/item_desconocido"
            android:text="Especie: Desconocido\nCantidad: Esperando al servidor..."/>
    </LinearLayout>

</LinearLayout>